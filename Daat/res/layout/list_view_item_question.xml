<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="vertical" >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:paddingLeft="1dp"
	    android:paddingRight="1dp"
	    android:orientation="horizontal"
	    android:layout_weight="1" 
	    android:background="@android:color/white">
	    
		<ImageView
		    android:id="@+id/ListItemUserImg"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:adjustViewBounds="true"
		    android:contentDescription="image"
		    android:src="@drawable/ic_launcher"
		    android:background="#fff"
		    android:layout_weight="1"/>
		<TextView
		    android:id="@+id/ListItemUserName"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:textColor="@android:color/black"
		    android:textSize="20sp"
		    android:layout_toRightOf="@id/ListItemUserImg"/>
		<TextView
		    android:id="@+id/ListItemHeadline"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textColor="@android:color/darker_gray"
		    android:layout_toRightOf="@id/ListItemUserName"/>
		</RelativeLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:paddingLeft="4dp"
	    android:paddingRight="4dp"
	    android:orientation="vertical" 
	    android:layout_weight="5"
	    android:background="#fff">
	<TextView
	    android:id="@+id/ListItemTitleQuestion"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:textSize="20sp"
	    android:gravity="center_vertical"
	    android:minHeight="35sp"
	    android:layout_weight="1"/>
	<TextView
	    android:id="@+id/ListItemTextAnswer"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:textColor="@android:color/black"
	    android:textSize="20sp"
	    android:gravity="center_vertical"
	    android:minHeight="35sp"
	    android:layout_weight="1"/>
	</LinearLayout>
</LinearLayout>